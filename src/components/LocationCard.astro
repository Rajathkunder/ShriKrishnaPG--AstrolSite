---
const { title, description, details, mapSrc, index } = Astro.props;
---

<div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2 animate-on-scroll">
  <div class="mb-6">
    <h4 class="text-2xl font-bold text-blue-600 mb-2">{title}</h4>
    <p class="text-gray-600 mb-4">{description}</p>
    <div class="text-sm text-gray-500 space-y-1">
      {details.map(detail => (
        <p set:html={detail} />
      ))}
    </div>
  </div>
  <div class="bg-gray-200 h-64 rounded-lg flex items-center justify-center">
    <iframe 
      src={mapSrc}
      width="100%" 
      height="100%" 
      style="border:0; border-radius: 8px;" 
      allowfullscreen="" 
      loading={index === 0 ? 'eager' : 'lazy'}
      aria-label={`Map of ${title}`}
    ></iframe>
  </div>
</div>