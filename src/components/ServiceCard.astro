---

const { title, description, icon, image, index } = Astro.props;
---

<div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2 animate-on-scroll" data-index={index}>
  <img
    src={image} 
    alt={title}
    width={400}
    height={200}
    class="w-full h-48 object-cover rounded-lg mb-4" 
    formats={['avif', 'webp']}
    loading={index < 4 ? 'eager' : 'lazy'}
  />
  <div class="text-center">
    <div class="text-4xl mb-3 floating-element">{icon}</div>
    <h4 class="font-semibold text-xl mb-2 text-gray-800">{title}</h4>
    <p class="text-gray-600">{description}</p>
  </div>
</div>