---
import TestimonialCard from './TestimonialCard.astro';

const testimonials = [
  {
    name: "Ganesh S",
    role: "Pharmacist @KMC",
    rating: 5,
    review: "Excellent facilities and very homely environment. The food quality is outstanding and the owner is very supportive. I've been staying here for 3 years and it feels like home.",
    photo: "/images/Ganesh.jpg"
  },
  {
    name: "Rajath",
    role: "Student @MIT,Manipal",
    rating: 5,
    review: "Perfect location with great connectivity. The rooms are well-maintained and the security is top-notch. The WiFi speed is amazing for online classes and work.",
   photo: "/images/Rajath1.jpg"
  },
  {
    name: "Naresh Dokala",
    role: "Micro-biology student @MAHE",
    rating: 4,
    review: "Great value for money!, Friendly and supportive owner. I've been staying here for nearly a yearâ€”it's a good place. I'm from Andhra, and it truly feels like home.",
 photo: "/images/Naresh.jpg"
  },
  {
    name: "Raju Shivmogga",
    role: "Physiotherapist @Udupi Gp of Institutes",
    rating: 5,
    review: "The best PG I've ever stayed in! Karan anna is very caring and responsive to all our needs. The food reminds me of home cooking. Highly recommended!",
   photo: "/images/usericon.webp"
  },
 
  
];
---

<section id="testimonials" class="py-16 px-4 gradient-bg">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">What Our Residents Say</h3>
      <p class="text-lg text-white max-w-2xl mx-auto">Read genuine reviews from our satisfied residents who have made Sri Krishna Boy's PG their home</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial, index) => (
        <TestimonialCard 
          name={testimonial.name}
          role={testimonial.role}
          rating={testimonial.rating}
          review={testimonial.review}
          photo={testimonial.photo}
          index={index}
        />
      ))}
    </div>
  </div>
</section>