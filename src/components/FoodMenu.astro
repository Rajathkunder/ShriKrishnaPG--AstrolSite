---


const meals = [
  {
    name: "🌅 Breakfast",
    items: "Dosa, Poori, Tea , Rice Items",
    time: "Served: 7:00 AM - 10:00 AM",
    image: "/images/break-fast.webp"
  },
  {
    name: "🍽️ Lunch",
    items: "Rice, Dal, Seasonal Curry, Pickle, Papad",
    time: "Served: 12:00 PM - 3:00 PM",
    image: "/images/lunch.webp"
  },
  {
    name: "🌙 Dinner",
    items: "Rice, Sabji, Dal, Papad, Pickle",
    time: "Served: 7:00 PM - 9:00 PM",
    image: "/images/dinner.webp"
  }
];
---

<section id="food" class="py-16 px-4 gradient-bg">
  <div class="text-center mb-12">
    <h3 class="text-3xl md:text-4xl font-bold text-white mb-4">Delicious Food Menu</h3>
    <p class="text-lg text-white max-w-2xl mx-auto">Enjoy homely, nutritious meals prepared with care and hygiene</p>
  </div>
  <div class="grid grid-cols-1 md:grid-cols-3 gap-8 max-w-6xl mx-auto">
    {meals.map((meal, index) => (
      <div class="bg-white p-6 rounded-xl shadow-lg hover:shadow-2xl transition-all transform hover:-translate-y-2 animate-on-scroll">
        <img 
          src={meal.image} 
          alt={meal.name}
          width={400}
          height={250}
          class="w-full h-48 object-cover rounded-lg mb-4" 
          formats={['avif', 'webp']}
          loading={index === 0 ? 'eager' : 'lazy'}
        />
        <h4 class="font-semibold text-xl mb-2 text-gray-800">{meal.name}</h4>
        <p class="text-gray-600">{meal.items}</p>
        <p class="text-sm text-gray-500 mt-2">{meal.time}</p>
      </div>
    ))}
  </div>
</section>