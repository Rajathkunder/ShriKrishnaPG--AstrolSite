---
import { Image } from '@astrojs/image';
---

<section id="owner" class="py-16 px-4 bg-white">
  <div class="max-w-6xl mx-auto">
    <div class="text-center mb-12">
      <h3 class="text-3xl md:text-4xl font-bold text-gray-800 mb-4">Meet Our Owner</h3>
      <p class="text-lg text-gray-600 max-w-2xl mx-auto">Get in touch directly with the owner for bookings and inquiries</p>
    </div>
    
    <div class="bg-gradient-to-r from-blue-50 to-indigo-50 p-8 rounded-2xl shadow-xl hover:shadow-2xl transition-all duration-300">
      <div class="flex flex-col lg:flex-row items-center gap-8">
        <!-- Owner Photo -->
        <div class="lg:w-1/3 animate-on-scroll">
          <div class="relative group">
            <div class="w-64 h-64 mx-auto rounded-full overflow-hidden shadow-2xl border-8 border-white transition-transform duration-500 group-hover:scale-105">
              <image 
                src="/images/AKarana.jpg"
                alt="Mr. Karan Poojary - Owner of Sri Krishna Boy's PG"
                width={400}
                height={400}
                class="w-full h-full object-cover"
                formats={['avif', 'webp']}
                loading="eager"
              />
            </div>
            <div class="absolute -bottom-4 -right-4 bg-blue-600 text-white p-4 rounded-full shadow-lg hover:animate-bounce">
              <div class="text-2xl">👨‍💼</div>
            </div>
          </div>
        </div>
        
        <!-- Owner Info -->
        <div class="lg:w-2/3 animate-on-scroll">
          <div class="text-center lg:text-left">
            <h4 class="text-3xl font-bold text-gray-800 mb-2">Mr. Karan Poojary</h4>
            <p class="text-xl text-blue-600 mb-6">Owner | 8+ Years Experience</p>
            
            <!-- Contact Cards -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-4 mb-6">
              <!-- Call Card -->
              <a href="tel:+919876543210" class="bg-white p-4 rounded-xl shadow-md hover:shadow-lg transition-all hover:bg-blue-50 flex items-center gap-3">
                <div class="bg-blue-100 p-3 rounded-full">
                  <span class="text-blue-600 text-2xl">📞</span>
                </div>
                <div class="text-left">
                  <p class="font-medium text-gray-700">Call Directly</p>
                  <p class="text-blue-600 font-semibold">+91 98765 43210</p>
                </div>
              </a>
              
              <!-- WhatsApp Card -->
              <a href="https://wa.me/919876543210" target="_blank" class="bg-white p-4 rounded-xl shadow-md hover:shadow-lg transition-all hover:bg-green-50 flex items-center gap-3">
                <div class="bg-green-100 p-3 rounded-full">
                  <span class="text-green-600 text-2xl">💬</span>
                </div>
                <div class="text-left">
                  <p class="font-medium text-gray-700">WhatsApp</p>
                  <p class="text-green-600 font-semibold">Message Now</p>
                </div>
              </a>
            </div>
            
            <!-- Quick Contact Buttons -->
           
            
            <!-- Availability Badge -->
            <div class="inline-flex items-center bg-yellow-100 text-yellow-800 px-4 py-2 rounded-full mb-6">
              <span class="w-3 h-3 bg-green-500 rounded-full mr-2 animate-pulse"></span>
              <span class="font-medium">Available 24/7 for inquiries</span>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>