<section id="hero" class="hero-bg relative h-screen flex items-center justify-center text-white" style={`background-image: url(${heroData[0].image})`}>
  <div class="text-overlay rounded-2xl p-8 max-w-4xl mx-4 text-center">
    <div id="hero-content">
      <h2 class="text-4xl md:text-6xl font-bold mb-6 animate-fadeIn">{heroData[0].title}</h2>
      <p class="text-xl md:text-2xl mb-8 animate-slideUp">{heroData[0].subtitle}</p>
      <p class="text-lg md:text-xl mb-8 animate-slideUp">{heroData[0].features}</p>
      <button class="bg-blue-600 hover:bg-blue-700 px-8 py-4 rounded-full text-lg font-semibold transition-all transform hover:scale-105 animate-slideUp floating-element">
        Book Your Stay Today
      </button>
    </div>
  </div>
</section>

<script is:inline>
  document.addEventListener("DOMContentLoaded", () => {
   const heroData = [
  {
