    features: 'Common Areas • Events • Networking'
  }
];

    let currentIndex = 0;
    const heroSection = document.getElementById('hero');
    const heroContent = document.getElementById('hero-content');

    function updateHeroContent() {
      const data = heroData[currentIndex];
      heroSection.style.backgroundImage = `url(${data.image})`;
      heroContent.innerHTML = `
        <h2 class="text-4xl md:text-6xl font-bold mb-6 animate-fadeIn">${data.title}</h2>
        <p class="text-xl md:text-2xl mb-8 animate-slideUp">${data.subtitle}</p>
        <p class="text-lg md:text-xl mb-8 animate-slideUp">${data.features}</p>
        <a href="#owner">
        <button class="bg-blue-600 hover:bg-blue-700 px-8 py-4 rounded-full text-lg font-semibold transition-all transform hover:scale-105 animate-slideUp floating-element">
          Book Your Stay Today
        </button></a>
      `;
    }

    setInterval(() => {
      currentIndex = (currentIndex + 1) % heroData.length;
      updateHeroContent();
    }, 4000);
  });
</script>
